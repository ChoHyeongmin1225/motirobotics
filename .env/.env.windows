# === Gemini ===
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY

# === 엔진 선택 ===
# Windows에서도 Typecast 그대로 써도 되고, SAPI를 쓰고 싶으면 'sapi'로 바꿔도 됩니다.
TTS_ENGINE=typecast            # (sapi / typecast)

# === Typecast ===
TYPECAST_API_KEY=YOUR_TYPECAST_API_KEY
TYPECAST_VOICE_ID=tc_62fb679683a541c351dc7c3a
TYPECAST_MODEL=ssfm-v21
TYPECAST_LANGUAGE=kor
TYPECAST_AUDIO_FORMAT=wav
TYPECAST_EMOTION=normal
TYPECAST_EMOTION_INTENSITY=1.0
TYPECAST_SEED=42

# === (선택) SAPI 옵션: TTS_ENGINE=sapi일 때만 유효 ===
# * macOS에서는 무시됩니다.
TTS_OUTPUT_DEVICE=스피커(Realtek(R) Audio)
TTS_FORCE_VOICE_ID=HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\Speech\Voices\Tokens\TTS_MS_KO-KR_HEAMI_11.0
TTS_RATE=0
TTS_VOLUME=100

# === Dynamixel ===
DXL_PORT=COM3
DXL_BAUD=57600
DXL_PROTO=2.0

# === 카메라 ===
# 외장카메라가 1인 경우가 많습니다. 내장쓰면 0으로 바꾸세요.
CAM_INDEX=1

# === 마이크 ===
# 장치 이름 '부분일치'로 매칭 (대소문자 무시). 장치 목록은
# python -c "import sounddevice as sd; print(sd.query_devices())" 로 확인
INPUT_DEVICE_NAME=USB PnP Audio Device

# === 오디오 캡처 파라미터 ===
SAMPLE_RATE=48000
CHANNELS=1
DTYPE=int16
